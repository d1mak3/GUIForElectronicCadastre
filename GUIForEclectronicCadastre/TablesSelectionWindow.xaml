<Window x:Class="GUIForEclectronicCadastre.TableSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUIForEclectronicCadastre"
        mc:Ignorable="d"
        Title="Electronic Cadastre" Height="450" Width="450" Closed="Window_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="392*"></RowDefinition>
            <RowDefinition Height="43*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <ListBox x:Name="TablesListBox" FontSize="15" HorizontalContentAlignment="Center" Grid.Row="0"/>

        <Button x:Name="SelectTableButton" Content="Select" HorizontalAlignment="Center" FontSize="15" Grid.Row="1" Width="80" Height="28" Margin="0,6,0,6" Click="SelectTableButton_Click"/>
    </Grid>
</Window>
